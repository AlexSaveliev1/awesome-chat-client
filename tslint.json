{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "whitespace": [
      true,
      "check-module",
      "check-operator",
      "check-branch",
      "check-preblock",
      "check-decl",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-type-operator"
    ],
    "trailing-comma": [
      false
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": [
      true,
      120
    ],
    "curly": true,
    "array-type": [
      false
    ],
    "no-eval": true,
    "no-console": [
      true,
      "log",
      "info"
    ],
    "newline-before-return": true,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "object-literal-sort-keys": false,
    "max-classes-per-file": [
      true,
      1
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ]
  }
}
